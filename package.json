{
  "name": "yt-growth-monorepo",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun --cwd apps/web run dev",
    "build": "bun --cwd apps/web run build",
    "start": "bun --cwd apps/web run start",
    "lint": "bun --cwd apps/web run lint",
    "typecheck": "bun --cwd apps/web run typecheck",
    "test": "bun --cwd apps/web run test",
    "test:unit": "bun --cwd apps/web run test:unit",
    "test:integration": "bun --cwd apps/web run test:integration",
    "test:e2e": "bun --cwd apps/web run test:e2e",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "bun --cwd apps/web run db:migrate",
    "db:push": "bun --cwd apps/web run db:push",
    "db:seed": "bun --cwd apps/web run db:seed",
    "db:studio": "bun --cwd apps/web run db:studio",
    "db:generate": "bun --cwd apps/web run db:generate",
    "db:reset": "bun --cwd apps/web run db:reset",
    "worker:embed": "cd apps/worker && python -m worker embed",
    "worker:cluster": "cd apps/worker && python -m worker cluster",
    "worker:score": "cd apps/worker && python -m worker score",
    "worker:rank": "cd apps/worker && python -m worker rank",
    "worker:run": "cd apps/worker && python -m worker run"
  },
  "dependencies": {
    "critters": "^0.0.25"
  },
  "devDependencies": {
    "dependency-cruiser": "^17.3.8",
    "eslint-plugin-sonarjs": "^4.0.0",
    "jscpd": "^4.0.8",
    "knip": "^5.84.1",
    "madge": "^8.0.0",
    "purgecss": "^8.0.0"
  }
}
